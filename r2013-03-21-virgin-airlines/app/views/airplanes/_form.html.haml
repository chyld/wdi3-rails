.row
  .large-3.columns
    = form_for @airplane, :remote => true do |f|
      = f.label :name
      = f.text_field :name, :autofocus => true
      = f.label :rows
      = f.number_field :rows
      = f.label :cols
      = f.number_field :cols
      = link_to('Cancel', '#', :'data-clear-form' => true, :class => 'button tiny radius alert')
      = f.submit nil, :class => 'button tiny radius success'
  .large-9.columns
