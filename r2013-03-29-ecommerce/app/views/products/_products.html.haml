= link_to('New Product', new_product_path, :remote => true, :class => 'button tiny success') if @auth && @auth.is_admin
- if @auth.present?
  #form
  #map_canvas
  %script
    app.display_map(40.7316, -73.9901, 9)
  %table
    %tr
      %th Name
      %th Description
      %th Image
      %th Cost
      %th Tags
    - @products.each do |product|
      %tr
        %script
          = "app.add_marker(#{product.lat}, #{product.lng}, '#{product.name}');"
        %td
          - if @auth.customer_id.present?
            = render :partial => 'products/customer', :locals => {:product => product}
          - else
            = render :partial => 'products/anonymous', :locals => {:product => product}
        %td= product.description
        %td= image_tag product.image.thumb.url
        %td= number_to_currency product.cost
        %td
          - product.tags.each do |tag|
            = link_to("#{tag.name} - #{tag.products.count}", filter_products_path(tag.id), :remote => true, :class => 'button tiny radius secondary')
